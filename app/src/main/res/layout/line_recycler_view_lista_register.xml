<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_marginTop="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />

        <ProgressBar
            android:id="@+id/itemProgress"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            style="?android:attr/progressBarStyle"
            android:indeterminate="true" />

    </RelativeLayout>


    <!-- LINHA INTEIRA -->
    <LinearLayout
        android:id="@+id/ll_line_list_view_lista_abastecimento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <!-- LEFT SIDE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/space_guidelines_16dp"
            android:layout_marginRight="@dimen/space_guidelines_16dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_linha_um"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:text="Linha Principal"
                android:textColor="@color/branco"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txv_linha_dois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:singleLine="false"
                android:text="Linha Secundaria"
                android:textColor="@color/cinza_escuro_fontes"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txv_linha_tres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Linha Secundaria"
                android:textColor="@color/cinza_escuro_fontes"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- RIGTH SIDE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/space_guidelines_16dp"
            android:layout_marginRight="@dimen/space_guidelines_16dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_linha_um_direita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="top|right"
                android:maxLines="2"
                android:singleLine="false"
                android:text="00/10/2010"
                android:textColor="@color/cinza_escuro_fontes"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>